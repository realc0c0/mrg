{
  "name": "mrgnomebot",
  "version": "1.0.0",
  "description": "Mr.Gnome Tap to Earn Telegram Mini App",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "rimraf ./build && mkdir build && npm run build:frontend && npm run build:backend",
    "build:frontend": "cp .\\public\\* .\\build\\ /E /I /Y",
    "build:backend": "cp server.js .\\build\\ && cp package.json .\\build\\ && cp .env .\\build\\",
    "serve": "node build/server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
